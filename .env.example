# ============================================
# EL PATIO RP - BOT DE TICKETS
# Configuración Principal
# ============================================

# TOKEN DEL BOT DE DISCORD
# Obtenerlo en: https://discord.com/developers/applications
DISCORD_TOKEN=tu_token_aqui

# ID DEL SERVIDOR DE DISCORD
GUILD_ID=tu_guild_id_aqui

# ============================================
# CANALES
# ============================================

# Canal donde se mostrará el panel principal de tickets
PANEL_CHANNEL_ID=id_del_canal_ticket_panel

# Canal donde se enviarán los logs
LOG_CHANNEL_ID=id_del_canal_logs_tickets

# ============================================
# CATEGORÍAS
# ============================================

# Categoría para tickets abiertos
OPEN_CATEGORY_ID=id_categoria_tickets_abiertos

# Categoría para tickets cerrados
CLOSED_CATEGORY_ID=id_categoria_tickets_cerrados

# ============================================
# ROLES DE STAFF
# ============================================

# Rol de Soporte (puede atender tickets de Soporte General y Otros)
SUPPORT_ROLE_ID=id_rol_soporte

# Rol de Finanzas (puede atender tickets de Donaciones)
FINANCE_ROLE_ID=id_rol_finanzas

# Rol de Moderador (puede atender tickets de Apelaciones)
MODERATOR_ROLE_ID=id_rol_moderador

# Rol de Admin (puede atender todos los tickets)
ADMIN_ROLE_ID=id_rol_admin

# Rol de Admin Superior (puede atender Reportes de Staff)
SENIOR_ADMIN_ROLE_ID=id_rol_admin_superior

# ============================================
# BASE DE DATOS MONGODB
# ============================================

# URI de conexión a MongoDB
# Obtener en: https://www.mongodb.com/cloud/atlas
# Formato: mongodb+srv://usuario:contraseña@cluster.mongodb.net/database
MONGODB_URI=mongodb://localhost:27017/elpatio_tickets

# ============================================
# CONFIGURACIÓN DEL SISTEMA
# ============================================

# Tiempo de inactividad antes de aviso (en horas)
INACTIVITY_WARNING_TIME=42

# Tiempo de inactividad antes de cierre automático (en horas)
INACTIVITY_CLOSE_TIME=44

# Máximo de tickets abiertos por usuario
MAX_TICKETS_PER_USER=3

# Límite de tickets en 24 horas por usuario
TICKET_LIMIT_24H=3

# ============================================
# PERSONALIZACIÓN
# ============================================

# URL del GIF animado para el panel (opcional)
# Debe ser menor a 3MB
PANEL_GIF_URL=https:https://imgur.com/oZSrSXF

# URL del logo/thumbnail estático (opcional)
PANEL_THUMBNAIL_URL=https://imgur.com/oZSrSXF

# Nombre del servidor
SERVER_NAME=EL PATIO RP

# ============================================
# OPCIONES AVANZADAS
# ============================================

# Activar sistema anti-spam (true/false)
ANTI_SPAM_ENABLED=true

# Activar notificaciones por DM a staff (true/false)
DM_NOTIFICATIONS=true

# Activar transcripciones automáticas (true/false)
AUTO_TRANSCRIPTS=true

# Formato de transcripciones (txt, html, both)
TRANSCRIPT_FORMAT=both

# ============================================
# DESARROLLO
# ============================================

# Modo de desarrollo (true/false)
DEV_MODE=false

# Canal de pruebas (opcional, solo en modo desarrollo)
TEST_CHANNEL_ID=
